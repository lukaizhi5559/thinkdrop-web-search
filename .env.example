# Server Configuration
PORT=3002
HOST=0.0.0.0
NODE_ENV=development

# Database
DB_PATH=./data/web_search.duckdb

# Security
API_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# DuckDuckGo Configuration (Primary Provider)
DUCKDUCKGO_BASE_URL=https://api.duckduckgo.com

# NewsAPI Configuration (Optional - not required)
# NEWSAPI_KEY=your-newsapi-key-here
# NEWSAPI_BASE_URL=https://newsapi.org/v2
# NEWSAPI_MAX_RESULTS=100

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_TIME_SENSITIVE=600000
CACHE_TTL_GENERAL=86400000
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_NEWSAPI=100
RATE_LIMIT_WINDOW=86400000

# Performance
REQUEST_TIMEOUT=5000
MAX_RETRIES=3
RETRY_DELAY=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
